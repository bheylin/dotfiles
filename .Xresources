! display settings
URxvt.depth: 32

! DejaVuSans contains braille glyphs (for btm)
! Source Code Pro contains emojis
URxvt.font: xft:Hack:size=12,xft:DejaVuSans:size=12,xft:Source Code Pro:size=12
URxvt.boldFont: xft:Hack:size=12,xft:DejaVuSans:size=12,xft:Source Code Pro:size=12
URxvt.italicFont: xft:Hack:size=12,xft:DejaVuSans:size=12,xft:Source Code Pro:size=12
URxvt.boldItalicFont: xft:Hack:size=12,xft:DejaVuSans:size=12,xft:Source Code Pro:size=12

! Disable PERL extensions
URxvt.perl-ext:
URxvt.perl-ext-common:

! Scroll bar is not needed, Zellij buffer is used instead
URxvt.scrollBar:            false
URxvt.scrollBar_floating:   false
URxvt.saveLines:            0

! Scroll locking
URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     false
URxvt.scrollTtyKeypress:    true

! Generate the same codes as xterm for Ctrl + arrows
! Otherwise programs such as Helix and Bottom wont pick them up
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

URxvt.keysym.M-Down:        \033[1;3B
URxvt.keysym.M-Up:          \033[1;3A
URxvt.keysym.M-Left:        \033[1;3D
URxvt.keysym.M-Right:       \033[1;3C

