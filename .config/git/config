[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    dfi = -c delta.side-by-side=false -c delta.line-numbers=false diff
    dft = difftool
    out = log --pretty=oneline --abbrev-commit --graph @{u}..
    pp = pull --prune
    st = status
    sw = switch

[commit]
    gpgsign = true

[core]
    pager = delta
    excludesfile = ~/.config/.gitignore
    
[delta]
    line-numbers = true
    features = zebra-dark
    navigate = true
    side-by-side = true
        
[delta "interactive"]
    keep-plus-minus-markers = false

[diff]
    colorMoved = default
    tool = difftastic
	external = difft

[difftool]
    prompt = false
    
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[include]
    path = ~/projects/third_party/delta/themes.gitconfig

[init]
    defaultBranch = main
    
[interactive]
    diffFilter = delta --color-only --features=interactive
    
[merge]
    conflictstyle = diff3
    tool = meld

[pager]
    difftool = true

[push]
    # Always push as if `-u` has been specified
    autoSetupRemote = true

[includeIf "gitdir:~/.cfg/**"]
    path = ~/.cfg/.gitconfig

[includeIf "gitdir:~/.cfg-ds/**"]
    path = ~/.cfg-ds/.gitconfig

[includeIf "gitdir:~/projects/ds/**"]
    path = ~/projects/ds/.gitconfig

[includeIf "gitdir:~/projects/personal/**"]
    path = ~/projects/personal/.gitconfig
