[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    dft = difftool -t difftastic
    out = log --oneline @{push}..
    pp = pull --prune
    st = status
    sw = switch

[core]
    pager = delta
    excludesfile = ~/.config/.gitignore
    
[delta]
    features = zebra-dark
    line-numbers = true
    navigate = true
    side-by-side = false
    syntax-theme = Catppuccin-mocha
        
[delta "interactive"]
    keep-plus-minus-markers = false

[diff]
    colorMoved = default

[difftool]
    prompt = false
    
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[init]
    defaultBranch = main
    
[interactive]
    diffFilter = delta --color-only --features=interactive
    
[merge]
    conflictstyle = diff3

[pager]
    difftool = true

[push]
    # Always push as if `-u` has been specified
    autoSetupRemote = true

[pull]
    rebase = true

[includeIf "gitdir:~/.cfg/**"]
    path = ~/.cfg/.gitconfig

[includeIf "gitdir:~/.cfg-ds/**"]
    path = ~/.cfg-ds/.gitconfig

[includeIf "gitdir:~/projects/ds/**"]
    path = ~/projects/ds/.gitconfig

[includeIf "gitdir:~/projects/personal/**"]
    path = ~/projects/personal/.gitconfig
